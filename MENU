#include <iostream>
#include "rlutil.h"
using namespace std;




int main() {
	
	int op;
	int y = 0; //Se crea la variable "y" para cambiar la posicion del cursor.
	
	
	
	
	do {
		
		rlutil::hidecursor(); //oculta el cursor.
		
		//rlutil::cls();
		
		rlutil::locate(50,10);
		cout << "\tMENU" << endl;	
		rlutil::locate(50,11);
		cout << "---------------------" << endl;
		rlutil::locate(50,12);
		cout << "1- JUGAR" << endl;
		rlutil::locate(50,13);
		cout << "2- ESTADISTICAS" <<endl;
		rlutil::locate(50,14);
		cout << "3- CREDITOS " << endl;
		rlutil::locate(50,15);
		cout << "0- SALIR " << endl;
		rlutil::locate(50,16);
		cout << "---------------------" << endl;
		rlutil::locate(48,12 + y);
		cout << (char)175 << endl;
		
		
		int key = rlutil ::getkey();
		
		switch (key)
			
		{
		case 14: //Arriba
			
			rlutil::locate(48,12 + y);
			cout << " " << endl;
			
			y--;
			if(y<0)
			{y = 0;} 
			break;
			
		case 15: //Abajo   
			rlutil::locate(48,12 + y);
			cout << " " << endl;
			
			y++;
			if(y>3)
			{y = 3;} 
			break;
			
		case 1: //Enter
			
			switch (y)
			{
			case 3:
				
				op = 0;
			}
			break;
			
		default: 
			break;
			
		}
		
		
		switch (op)
				
		{
		case 1: cout << "JUGAR" << endl; break;
		case 2: cout << "ESTADISTICAS" << endl; break;
		case 3: cout << "CREDITOS" << endl; break;
		default:
			break;
			
		}
		
		
		
		
		
		
		
	} while(op!= 0);
	
	
	
	return 0;
}
